{# src/paceeGameBundle/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>

    <head>
        <meta charset="utf-8" />
        <link href="https://fonts.googleapis.com/css?family=Muli" rel="stylesheet">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{asset('style.css')}}" />
        {% endblock %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">


        <title>{% block title %}{% endblock %}</title>
    </head>

    <body>
        <header>
            <div id="top1">
                <a href="{{path('pacee_Game_home')}}"><img id="logo" src="{{asset('img/logo.png')}}"></a>
                <input type="search" placeholder="Search game">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                   <span id="reg" class="spanreg"> <label  class="labelregister">  Connected as {{ app.user.username }} </label>
                    <a href="{{ path('fos_user_security_logout') }}">Disconnect</a></span>
                {% else %}

                    <span id="reg" class="spanreg"><label  class="labelregister"> <a href="{{ path('fos_user_security_login') }}">Login</a></label ></span><span class="spanreg"><label  class="labelregister">    <a href="{{ path('fos_user_registration_register') }}">Register</a></label>
                    {% endif %}
                </span>


            </div>
            <div id="top2">
                <img id="head" src="{{asset('img/head.jpg')}}"></div>

        </header>

        <div id="body" class="container">
            <div class="row"> 



                {% block body %}
                {% endblock %}


            </div>

        </div>
        <footer></footer>
    </body>

</html>
