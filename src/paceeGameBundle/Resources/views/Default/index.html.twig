{% extends "paceeGameBundle::layout.html.twig" %}

{% block title %}{{ parent() }} Play Game{% endblock %}


{% block body %}
    {% for game in games %}

        <div  class="col-xs-12 col-sm-6 col-md-3 col-lg-3 col1"><a href="{{path('pacee_Game_page',{'name':game.name|replace({' ': "-"})})}}"> {%if not game.local %}<img class="gameimg" src="{{ game.thumbnail }}"> {%else%}<img class="gameimg" src="{{ game.uri }}/img.jpg">{%endif%}<p >{{ game.name }}</p></a></div>
    
    {% endfor %}
{% endblock %}  


